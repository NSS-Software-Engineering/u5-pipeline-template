                "keyPath": [
                    {
                        "valueOf": "stage_name"
                    },
                    "cloudformation_execution_role"
                ]
            }
        },
        {
            "key": "artifacts_bucket",
            "question": "What is the S3 bucket name for artifacts?",
            "isRequired": true,
            "allowAutofill": true,
